<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_game_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/create_game_background"
    android:fitsSystemWindows="true">

    <!-- dark overlay  -->
    <View
        android:id="@+id/darken_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000" />

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/create_game_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:id="@+id/create_game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Game"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_light"
                android:layout_marginBottom="24dp" />

            <!-- Field name -->
            <TextView
                android:id="@+id/field_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Field / Location"
                android:textColor="@android:color/holo_green_light"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/field_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_outline_white"
                android:hint="e.g. Riverside Turf Field"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/white"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Date -->
            <TextView
                android:id="@+id/date_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@android:color/holo_green_light"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EE999999"
                android:padding="12dp"
                android:orientation="vertical"
                android:elevation="6dp"
                android:clipToPadding="false"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:shape="rectangle">

<!--                <DatePicker-->
<!--                    android:id="@+id/date_picker"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:datePickerMode="spinner"-->
<!--                    android:calendarTextColor="#000000"-->
<!--                    android:dayOfWeekBackground="#FFFFFF"-->
<!--                    android:dayOfWeekTextColor="#000000"-->
<!--                    android:headerTextColor="#000000"-->
<!--                    android:weekNumberColor="#000000" />-->

            </LinearLayout>

            <!-- Time -->
            <TextView
                android:id="@+id/time_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kickoff Time"
                android:textColor="@android:color/holo_green_light"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EE999999"
                android:padding="12dp"
                android:orientation="vertical"
                android:elevation="6dp"
                android:clipToPadding="false"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

<!--                <TimePicker-->
<!--                    android:id="@+id/time_picker"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:timePickerMode="spinner"-->
<!--                    android:is24HourView="false" />-->
            </LinearLayout>

            <!-- Skill level -->
            <TextView
                android:id="@+id/skill_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skill Level"
                android:textColor="@android:color/holo_green_light"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <RadioGroup
                android:id="@+id/skill_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:outlineAmbientShadowColor="@android:color/holo_green_light"
                android:outlineSpotShadowColor="@android:color/holo_green_light">

                <RadioButton
                    android:id="@+id/skill_newbie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Newbie"
                    android:textColor="@android:color/holo_green_light" />

                <RadioButton
                    android:id="@+id/skill_casual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Casual"
                    android:textColor="@android:color/holo_green_light"
                    android:layout_marginStart="16dp" />

                <RadioButton
                    android:id="@+id/skill_intermediate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intermediate"
                    android:textColor="@android:color/holo_green_light"
                    android:layout_marginStart="16dp" />
            </RadioGroup>

            <!-- Players needed -->
            <TextView
                android:id="@+id/players_needed_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Players Needed"
                android:textColor="@android:color/holo_green_light"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/players_needed_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_outline_white"
                android:hint="e.g. 10"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Notes -->
            <TextView
                android:id="@+id/notes_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/notes_input"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/white"
                android:hint="e.g. Bring dark shirts"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:textColor="@android:color/black"
                android:textColorHint="#88000000"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <!-- Create Game button -->
            <Button
                android:id="@+id/create_game_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Game"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="14dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="16dp"
                app:cornerRadius="24dp"
                app:backgroundTint="@android:color/holo_green_light" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>