<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEF3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Back Button -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† Back"
            android:textSize="16sp"
            android:backgroundTint="#183059"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <!-- Rank Badge Image -->
                <ImageView
                    android:id="@+id/friend_rank_badge"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="Rank Badge"
                    android:src="@drawable/rank_barefoot"/>

                <!-- Friend Name -->
                <TextView
                    android:id="@+id/friend_page_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friend Name"
                    android:textSize="28sp"
                    android:textColor="#183059"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <!-- Username -->
                <TextView
                    android:id="@+id/friend_page_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@username"
                    android:textSize="18sp"
                    android:textColor="#009961"
                    android:layout_marginBottom="12dp"/>

                <!-- Rank Name -->
                <TextView
                    android:id="@+id/friend_page_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ball Master"
                    android:textSize="20sp"
                    android:textColor="#FF6B35"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player Stats"
                    android:textSize="20sp"
                    android:textColor="#183059"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- Stats Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Games Played -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/friend_games_played"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textColor="#183059"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Games"
                            android:textSize="14sp"
                            android:textColor="#666"/>
                    </LinearLayout>

                    <!-- Wins -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/friend_wins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textColor="#009961"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wins"
                            android:textSize="14sp"
                            android:textColor="#666"/>
                    </LinearLayout>

                    <!-- Losses -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/friend_losses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textColor="#E63946"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Losses"
                            android:textSize="14sp"
                            android:textColor="#666"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="20sp"
                    android:textColor="#183059"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/friend_page_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready to play!"
                    android:textSize="16sp"
                    android:textColor="#666"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Friend Request Button Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <Button
                android:id="@+id/send_friend_request_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Send Friend Request"
                android:textColor="#FFFFFF"
                android:backgroundTint="#009961"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="16dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
